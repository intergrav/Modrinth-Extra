{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 3,
    "name": "Modrinth Extra",
    "version": "1.0.0",
    "description": "Open source extension that adds extra animations and features to the Modrinth website.",
    "icons": {
        "16": "branding/icons/icon16x.png",
        "48": "branding/icons/icon48x.png",
        "128": "branding/icons/icon128x.png"
    },
    "host_permissions": [
        "https://api.modrinth.com/v2/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.modrinth.com/*"
            ],
            "css": [
                "styles/baseanimations.css"
            ],
            "js": [
                "scripts/script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "branding/*"
            ],
            "matches": [
                "*://*.modrinth.com/*"
            ]
        }
    ]
}