{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 3,
    "name": "Modrinth Extra",
    "version": "1.0.0",
    "description": "Open source extension that adds extra animations and features to the Modrinth website.",
    "icons": {
        "16": "branding/iconsmall_16h.png",
        "32": "branding/iconsmall_32h.png",
        "48": "branding/iconbig_48h.png",
        "64": "branding/iconbig_64h.png",
        "128": "branding/iconbig_128h.png",
        "256": "branding/iconbig_256h.png",
        "512": "branding/iconbig_512h.png"
    },
    "host_permissions": [
        "https://api.modrinth.com/v2/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.modrinth.com/*"
            ],
            "css": [
                "styles/baseanimations.css"
            ],
            "js": [
                "scripts/credits.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "branding/*"
            ],
            "matches": [
                "*://*.modrinth.com/*"
            ]
        }
    ]
}